#logo 
  = site_name

- if current_user

  #user.mb2
    = current_user.name
    .h5.aqua
      = current_user.subtitle
  %ul
    %li
      %a{href:root_path,class:cp(root_path)}
        %i.fa.fa-dashboard.mr1
        Dashboard

  - if current_user.admin?
    = render partial: 'shared/sidebar/for_admin'
  - else
    = render partial: 'shared/sidebar/for_webmaster'

  = render partial: 'shared/sidebar/for_all'
  
- else
  = render partial: 'shared/sidebar/for_guest'

