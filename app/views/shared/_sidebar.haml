#logo 
  Reactions Demo
- if current_user
  #user
    = current_user.name
    .h5.muted-2
      - if current_user.admin?
        Admin
      - else
        = current_user.website
%ul
  - if current_user
    - if current_user.admin?
      %li
        %a{href:'/',class:cc('administrators')}
          %i.fa.fa-user.mr1
          Administrators
      %li
        %a{href:'/',class:cc('webmasters')}
          %i.fa.fa-user.mr1
          Webmasters
    - else
      %li
        %a{href:'/',class:cp('/')}
          Products
    %li
      %a{href:edit_user_registration_path,class:cp(edit_user_registration_path)}
        %i.fa.fa-gear.mr1
        Account settings
    %li
      %a{href:destroy_user_session_path, 'data-method':'delete'} 
        %i.fa.fa-sign-out.mr1
        Logout
  - else
    %li
      %a{href:'/login'}
        %i.fa.fa-sign-in.mr1
        Login
