= form_for(@emoticon) do |f|
  .mb2
    .mb1
      .emoticon
        %img{src:@emoticon.try(:image).try(:url)}
    .inline-block.relative.mr2
      .btn
        %i.fa.fa-upload.mr1
        Upload emoticon
      = f.file_field :image, class: 'absolute top-0 left-0 right-0 bottom-0 opa0'
  .mb2
    = f.label :label
    = f.text_field :label
  .mb2
    = f.label :category
    = f.select :category, Emoticon.category_names
  %button.btn.btn-full.btn-lg.btn-blue{type:'submit'}
    %i.fa.fa-save.mr1
    Save
