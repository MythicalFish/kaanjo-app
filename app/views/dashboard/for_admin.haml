.flex.items-center.justify-end
  .flex-auto.bb1
    .p2.md-p3.bold
      %i.fa.fa-dashboard.mr1
      Dashboard
  .flex-none
    = render partial: 'shared/datepicker'

.bg-white.flex-auto.p2.md-p3.lg-p4
  .row.col-xs-12
    .col.col-md-6.center
      .md-mr1
        .row.b1.bb0
          .col-md-6.p2.md-p3
            %h4.m0 Total impressions
            .h2= @impression_total
          .col-md-6.p2.md-p3
            %h4.m0 Total reactions
            .h2= @reaction_total
        .p2.md-p3.lg-p4.bg-aqua.white
          .h1= "CTR: #{@total_ctr}"
    .col.col-md-6
      .md-ml1
        %table
          %thead
            %tr
              %td{colspan:2}
                %h4.p2.m0.b1.bb0 Top webmasters
          - @webmasters.each do |w|
            %tr
              %td
