.mb2
  = f.label :first_name
  = f.text_field :first_name, required:true, autofocus: true
.mb2
  = f.label :last_name
  = f.text_field :last_name, required:true
.mb2
  = f.label :email
  = f.email_field :email, required:true
.mb2
  = f.label :password
  = f.password_field :password, required:true, autocomplete: "off"
.mb2
  = f.label :password_confirmation, required:true
  = f.password_field :password_confirmation, autocomplete: "off"

.actions
  = f.submit label, class: 'btn btn-full'
