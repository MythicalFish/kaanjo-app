#header
  %h1
    %i.fa.fa-user.mr1
    %a{href:'/'} Webmasters
    %a{href:webmaster_path(@webmaster)}= @webmaster.name
    Edit

#body.p2.lg-p3
  .container-narrow
    = form_for(@webmaster) do |f|
      .mb2.row
        .col-md-6
          = f.label :first_name
          = f.text_field :first_name
        .col-md-6
          = f.label :last_name
          = f.text_field :last_name
      .mb2
        = f.label :email
        = f.email_field :email
      - if devise_mapping.confirmable? && @webmaster.pending_reconfirmation?
        .p2.bg-orange.mb2
          Currently waiting confirmation for: #{@webmaster.unconfirmed_email}
      .mb2
        = f.label :website
        = f.text_field :website
      .mb2.p3.bg-darken-1
        .mb2
          %b Change password
          %i (leave blank for no change)
        .mb2.row
          .col-md-6
            = f.password_field :password, autocomplete: "off", placeholder: "New password"
          .col-md-6
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: "New password (again)"
      .actions
        = f.submit "Update"

