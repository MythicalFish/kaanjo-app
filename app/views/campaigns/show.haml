%header.flex.justify-between.items-center.y5
  %div
    %h1.inline-block
      Dashboard
    %div.inline-block
      = @campaign.name
  %div
    %a.btn.bg-gray{href:edit_campaign_url(relative_id:@campaign.relative_id)}
      %i.fa.fa-edit.mr1
      Edit campaign

= render partial: 'shared/chart', locals: { collection: @campaign }

%nav
  %ul.list-inline
    %li
      %a{href:url_for('')} All reactions
    - @campaign.scenarios.each do |s|
      %li
        %a.emoticon{href:url_for(scenario:s.id)}
          %img{src:s.image_url}
          %label= s.label