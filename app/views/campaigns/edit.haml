- content_for(:breadcrumbs) do
  - if admin?
    %li
      %a{href:'/'}
        Webmasters
    %li
      = render partial: 'shared/webmaster_selector'
    %li
      = "Edit campaign: #{@campaign.name}"
  - elsif webmaster?
    %li
      %a{href:campaigns_path}
        Campaigns
    %li
      = "#{@campaign.name} (edit)"

- content_for :actions do 
  - url = campaign_url(@campaign.relative_id)
  - url = campaign_url(@campaign.id) if admin?
  %a.btn.btn-blue{href:url}
    %i.fa.fa-eye.mr1
    View campaign

.container-narrow.p2.md-p3.lg-p4.bg-white
  = form_for(@campaign) do |f|
    = render partial: 'design_form', locals: {f:f}
    = render partial: 'settings_form', locals: {f:f}
    .actions
      = f.submit "Update", class: 'btn btn-blue'
   
  %code
    = '<script>'
    = render(partial: 'client/script', locals: { cid: @campaign.relative_id })
    = '</script>'