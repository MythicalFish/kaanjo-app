%table
  %thead        
    %tr
      %td
        = sort_link('name', 'Product name')
      %td
        = sort_link('impression_count', 'Impressions')
      %td
        = sort_link('reaction_total', 'Total reactions')
      %td 
        = sort_link('total_ctr', 'CTR')
      - ReactionType.all.each do |r|
        %td= r.name
  - products.each do |p|
    %tbody
      %tr
        %td
          %a{href:product_path(p)}= p.name
        %td= p.impression_count
        %td= p.reaction_count
        %td
          = "#{p.total_ctr}%"
        - ReactionType.all.each do |r|
          %td= p.reaction_count(r)
    
