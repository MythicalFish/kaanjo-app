%table
  %thead        
    %tr
      %td
        = sort_link('name', 'Product name')
      %td
        = sort_link('impression_count', 'Impressions')
      - ReactionType.all.each do |r|
        %td= sort_link("type_count_#{r.id}", r.name)
      %td
        = sort_link('reaction_total', 'Total reactions')
      %td 
        = sort_link('total_ctr', 'CTR')
  - products.each do |p|
    %tbody
      %tr
        %td
          %a{href:product_path(p.sid)}= p.name
        %td= p.impression_count
        - ReactionType.all.each do |r|
          %td= p.attributes["type_count_#{r.id}"]
        %td= p.reaction_total
        %td
          = ctr_for p
    
