%table
  %thead        
    %tr
      %td
        = sort_link('name', 'Product name')
      %td
        = sort_link('impression_total', 'Impressions')
      - Scenario.all.each do |r|
        %td= sort_link("type_total_#{r.id}", r.label)
      %td
        = sort_link('reaction_total', 'Total reactions')
      %td 
        = sort_link('ctr', 'CTR')
  %tbody
    - products.each do |p|
      %tr
        %td
          %a{href:product_path(p.sid)}= p.name
        %td= p.impression_total
        - Scenario.all.each do |r|
          %td= p.send("type_total_#{r.id}")
        %td= p.reaction_total
        %td
          = "#{p.ctr}%"
    
