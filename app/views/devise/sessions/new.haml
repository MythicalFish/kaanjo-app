- content_for(:page_title) { "Login" }

%nav.island-nav
  %span.island-nav-current Login
  %a{href:new_registration_path(resource_name)} Register

= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .mb2
    = f.email_field :email, autofocus: true, placeholder: "Email address"
  .mb2
    = f.password_field :password, autocomplete: "off", placeholder: "Password"
  .mb2
    = f.submit "Login", class: "btn btn-blue btn-wide rounded"
  - if devise_mapping.rememberable?
    .mb3.center
      = f.check_box :remember_me
      Remember me

  = link_to "Forgot your password?", new_password_path(resource_name), class: 'h5'
