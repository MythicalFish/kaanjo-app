- content_for(:page_title) { "Login" }

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  .flash.success
    %i.fa.fa-envelope.mr1
    Please check your inbox for the confirmation link.

.flex-auto.flex.items-center
  .container-narrower.mx-auto.p2.md-p4.bg-white
    %h2 Login
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .mb2
        = f.email_field :email, autofocus: true, placeholder: "Email address"
      .mb2
        = f.password_field :password, autocomplete: "off", placeholder: "Password"
      .mb2
        = f.submit "Login", class: "btn btn-full"
      - if devise_mapping.rememberable?
        .mb3.center
          = f.check_box :remember_me
          Remember me
      = render "devise/shared/links"
