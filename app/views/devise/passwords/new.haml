- content_for(:page_title) { "Lost password" }

.flex-auto.flex.items-center
  .container-narrower.mx-auto.p2.md-p4.bg-white
    %h2 Password reset
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      .mb2
        = f.email_field :email, autofocus: true, placeholder: "Your email address"
      .mb2
        = f.submit "Send me reset password instructions", class: "btn btn-full"
    = render "devise/shared/links"
